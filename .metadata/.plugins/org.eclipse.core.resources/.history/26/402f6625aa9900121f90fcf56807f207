<?xml version="1.0"?>

<project name="TesteAnt" default="main" basedir=".">
	<echo message="Definindo properties..."/>

	<property name="src.dir" location="src" />
	<property name="build.dir" location="WebContent/WEB-INF/classes" />
	<property name="war.dir" location="D:\TI\Java\Servers\apache-tomcat-7.0.27\webapps" />
	<property name="docs.dir" location="docs" />
	<property name="lib.dir" location="D:\TI\Java\Servers\apache-tomcat-7.0.27\lib" />
	
	<target name="clean">
		<delete dir="${docs.dir}" />
	</target>
	
	<target name="makedir">
			<mkdir dir="${build.dir}" />
			<mkdir dir="${docs.dir}" />
	</target>
		
	<target name="compile" depends="clean, makedir">
		<javac srcdir="${src.dir}" destdir="${build.dir}" classpath="${lib.dir}\servlet-api.jar" ></javac>
	</target> 
	
	<!-- Creates Javadoc -->
	<target name="docs" depends="compile">
		<javadoc packagenames="src" sourcepath="${src.dir}" destdir="${docs.dir}">
			<!-- Define which files / directory should get included, we include all -->
			<fileset dir="${src.dir}">
				<include name="**" />
			</fileset>
		</javadoc>
	</target>
	
	<target name="war" depends="compile">
		<war destfile="${war.dir}\${filewar}" webxml="WebContent\WEB-INF\web.xml">
			<fileset dir="WebContent" />
			<lib dir="${lib.dir}" />
			<classes dir="${build.dir}" />
		</war>
	</target>
	
	<target name="main" depends="compile, war">
		<description>Main target</description>
	</target>
	
</project>
